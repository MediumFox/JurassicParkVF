{% extends 'base.html.twig' %}

{% block title %}Les hôtels{% endblock %}

{% block body %}
    {% include 'reuse/hero.html.twig' %}
    <div class="flex justify-around p-5 gap-10">
        <div class="w-[30%]">
            {% include 'reuse/dashboard-admin.html.twig' %}
        </div>
        <div class="w-[70%] mx-auto p-2">
            <div class="w-[100%] flex justify-end">
                <a href="{{ path('app_hotel_new') }}" class="p-1.5 bg-slate-900 text-white font-bold rounded text-sm">Créer un hôtel</a>
            </div> 
            <h1 class="font-bold text-2xl mb-3.5 underline">Les hôtels</h1>
            <div class="grid-cols-4 grid-rows-4 grid gap-7">
                {% if hotels is not empty %}
                    {% for hotel in hotels|slice(0, 16)  %}
                        <div class="overflow-hidden bg-white border-[1px] border-gray-300 rounded-lg">
                            <div class="relative">
                                <img src="{{hotel.imageHotel}}" alt="image {{ hotel.libelleHotel }}" class="max-h-[150px] w-full object-cover">
                                <span class="absolute bottom-1 left-1 px-2 py-1 text-xs bg-slate-900 rounded ml-1 mb-1 font-bold text-white">
                                    {{ hotel.biome is not null ? hotel.biome.libelleBiome : 'Pas de biome défini' }}
                                </span>
                            </div>
                            <div class="px-3 pb-3 pt-2 relative">
                                <div class="flex justify-between">
                                    <div class="flex flex-row items-center">
                                        <span class="font-bold text-center">{{ hotel.libelleHotel }}</span>
                                    </div>
                                </div>

                                <div class="flex flex-col">
                                    <span>{{hotel.descriptionHotel}}</span>
                                </div>

                                    <div class="flex justify-end gap-2 mt-2">
                                       {{ include('hotel/_delete.html.twig') }}
                                        <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="rounded bg-slate-900 p-1 hover:cursor-pointer">
        
                                        </a>
                                    </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <span>Aucun hôtel trouvé</span>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
