                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/admin/remboursement">Les remboursements</a></li>
                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/admin/statistiques">Les statistiques</a></li>
                            <li class="h hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/admin/profile">Mon profil</a></li>
                        {% else %}
                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/dinopedia">Dinopédia</a></li>
                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/services">Nos services</a></li>
                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/histoire">Histoire</a></li>

                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/boutique">Boutique</a></li>
                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/client/reserver-aventure">Réservez votre aventure</a></li>
                            <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/client/profile">Mon profil</a></li>
                        {% endif %}
                        <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/logout">Déconnexion</a></li>
                    </ul>
                {% else %}
                    <ul class="flex flex-row justify-between gap-4 text-white font-bold">
                        <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/">Accueil</a></li>
                        <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/dinopedia">Dinopédia</a></li>
                        <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/services">Nos services</a></li>
                        <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/histoire">Histoire</a></li>
                        <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/register">Inscription</a></li>
                        <li class=" hover:text-bleuLune transition duration-500 px-2 py-1 rounded"><a href="/login">Connexion</a></li>
                    </ul>
                {% endif %}
            </div>
        </nav>
    {% endblock %}
</header>
