{% extends 'base.html.twig' %}

{% block title %}Les restaurants{% endblock %}

{% block body %}
    {% include 'reuse/hero.html.twig' %}
    <div class="flex justify-around p-5 gap-10">
        <div class="w-[30%]">
            {% include 'reuse/dashboard-admin.html.twig' %}
        </div>
        <div class="w-[70%] mx-auto p-2">
            <div class="w-[100%] flex justify-end">
                <a href="{{ path('app_restaurant_new') }}" class="p-1.5 bg-slate-900 text-white font-bold rounded text-sm">Créer un restaurant</a>
            </div> 
            <h1 class="font-bold text-2xl mb-3.5 underline">Les restaurants</h1>
            <div class="grid-cols-4 grid-rows-4 grid gap-7">
                {% if restaurants is not empty %}
                    {% for restaurant in restaurants|slice(0, 16)  %}
                        <div class="overflow-hidden bg-white border-[1px] border-gray-300 rounded-lg">
                            <div class="relative">
                                <img src="{{restaurant.imageRestaurant}}" alt="image {{ restaurant.libelleRestaurant }}" class="max-h-[130px] w-full object-cover">
                                <span class="absolute bottom-1 left-1 px-2 py-1 text-xs bg-slate-900 rounded ml-1 mb-1 font-bold text-white">
                                    {{ restaurant.biome is not null ? restaurant.biome.libelleBiome : 'Pas de biome défini' }}
                                </span>
                            </div>
                            <div class="px-3 pb-3 pt-2">
                                <div class="flex justify-between">
                                    <span class="font-bold">{{ restaurant.libelleRestaurant }}</span>
                                    <span>{{ restaurant.nbTable }}</span>
                                </div>
                                <span>Description</span>
                                 <div class="flex justify-end gap-2 mt-2">
                                    {{ include('restaurant/_delete.html.twig') }}
                                    <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="rounded bg-slate-900 p-1 hover:cursor-pointer">
    
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <span>Aucun restaurant trouvé</span>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

